<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sineva.rosclient.ui.BatteryAndSonarActivity">

    <TextView
        android:id="@+id/tv_battery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:text="Battery Voltage"
        android:layout_marginStart="17dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tv_battery_voltage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="31dp"
        android:layout_below="@+id/tv_front_sonar"
        android:layout_toStartOf="@+id/tv_sonar" />

    <TextView
        android:id="@+id/tv_sonar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_battery"
        android:layout_marginStart="69dp"
        android:layout_toEndOf="@+id/tv_battery"
        android:text="Sonar Distance" />

    <TextView
        android:id="@+id/tv_front_sonar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tv_sonar"
        android:layout_below="@+id/tv_sonar"
        android:layout_marginTop="26dp" />

    <TextView
        android:id="@+id/tv_back_sonar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tv_front_sonar"
        android:layout_below="@+id/tv_front_sonar"
        android:layout_marginTop="24dp" />

</RelativeLayout>
