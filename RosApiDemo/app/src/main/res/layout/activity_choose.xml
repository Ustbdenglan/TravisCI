<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sineva.rosclient.ui.ChooseActivity">

    <Button
        android:id="@+id/btn_move_base"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="72dp"
        android:layout_marginTop="50dp"
        android:onClick="onMoveBaseClick"
        android:text="chassis"
        tools:layout_editor_absoluteX="153dp"
        tools:layout_editor_absoluteY="66dp" />

    <Button
        android:id="@+id/btn_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_move_base"
        android:layout_alignBottom="@+id/btn_move_base"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="67dp"
        android:onClick="onHeadClick"
        android:text="head"
        tools:layout_editor_absoluteX="153dp"
        tools:layout_editor_absoluteY="153dp" />

    <Button
        android:id="@+id/btn_battery_voltage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btn_move_base"
        android:layout_below="@+id/btn_move_base"
        android:layout_marginTop="50dp"
        android:onClick="onBatteryClick"
        android:text="BatteryVoltage" />

    <Button
        android:id="@+id/btn_lidar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btn_battery_voltage"
        android:layout_alignEnd="@+id/btn_head"
        android:onClick="onLidarClick"
        android:text="Lidar" />

    <Button
        android:id="@+id/btn_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btn_battery_voltage"
        android:layout_below="@+id/btn_battery_voltage"
        android:layout_marginTop="29dp"
        android:onClick="onMapClick"
        android:text="Map" />

    <Button
        android:id="@+id/btn_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btn_map"
        android:layout_marginStart="35dp"
        android:layout_toEndOf="@+id/btn_move_base"
        android:onClick="onCameraClick"
        android:text="Camera" />

</RelativeLayout>
