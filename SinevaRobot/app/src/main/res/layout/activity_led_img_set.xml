<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#F0F3F6"
    >
    <com.sineva.rosapidemo.view.ToolbarControl
        android:id="@+id/toorbar"
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:layout_margin="20dp"
        app:titleText="@string/led_setting"
        android:gravity="center"
        >
    </com.sineva.rosapidemo.view.ToolbarControl>
    <View style="@style/bg_line"/>

    <LinearLayout
        android:background="@drawable/bg_layout_shape"
        android:layout_margin="20dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:text="@string/chargeing"
            android:textSize="45sp"
            android:layout_margin="20dp"
            android:padding="20dp"
            android:gravity="center"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            />
        <LinearLayout
            android:id="@+id/lin_chargeing_color"
            android:layout_weight="3"
            android:layout_margin="20dp"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:text="@string/red_color"
                android:id="@+id/tv_chargeing_color"
                android:textSize="45sp"
                android:layout_margin="20dp"
                android:padding="20dp"
                android:gravity="start"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/img_chargeing_color"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@color/red"
                android:clickable="false"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:background="@drawable/bg_layout_shape"
        android:layout_margin="20dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:text="@string/full_charged"
            android:textSize="45sp"
            android:layout_margin="20dp"
            android:padding="20dp"
            android:gravity="center"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            />
        <LinearLayout
            android:id="@+id/lin_full_charge_color"
            android:layout_weight="3"
            android:layout_margin="20dp"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:text="@string/green_color"
                android:id="@+id/tv_full_charge_color"
                android:textSize="45sp"
                android:layout_margin="20dp"
                android:padding="20dp"
                android:gravity="start"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/img_full_chargeg_color"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@color/green"
                android:clickable="false"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:background="@drawable/bg_layout_shape"
        android:layout_margin="20dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:text="@string/no_charge"
            android:textSize="45sp"
            android:layout_margin="20dp"
            android:padding="20dp"
            android:gravity="center"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            />
        <LinearLayout
            android:id="@+id/lin_no_charge_color"
            android:layout_weight="3"
            android:layout_margin="20dp"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:text="@string/blue_color"
                android:id="@+id/tv_no_charge_color"
                android:textSize="45sp"
                android:layout_margin="20dp"
                android:padding="20dp"
                android:gravity="start"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/img_no_chargeg_color"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@color/blue"
                android:clickable="false"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:background="@drawable/bg_layout_shape"
        android:layout_margin="20dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:text="@string/normal_use"
            android:textSize="45sp"
            android:layout_margin="20dp"
            android:padding="20dp"
            android:gravity="center"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            />
        <LinearLayout
            android:id="@+id/lin_regular_user_color"
            android:layout_weight="3"
            android:layout_margin="20dp"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:text="@string/purple_color"
                android:id="@+id/tv_regular_user_color"
                android:textSize="45sp"
                android:layout_margin="20dp"
                android:padding="20dp"
                android:gravity="start"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/img_regular_user_color"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@color/purple"
                android:clickable="false"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>